<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorStraw</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/colorStraw</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:background">@drawable/btn_primary_back</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="elevation">2dp</item>
    </style>

    <style name="TitleText" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SubText" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SmallText" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto_thin</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:numStars">5</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:isIndicator">true</item>
        <item name="android:progressTint">@color/colorDuskYellow</item>
    </style>

</resources>